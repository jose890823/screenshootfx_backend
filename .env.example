# Configuración de la Aplicación
PORT=3000
NODE_ENV=development

# Seguridad
API_KEY=tu_api_key_segura_aqui_cambiar_en_produccion

# Configuración de Puppeteer
MAX_CONCURRENT_SCREENSHOTS=3
SCREENSHOT_TIMEOUT=30000
MAX_BATCH_SIZE=20

# Almacenamiento
STORAGE_TYPE=local
STORAGE_PATH=./storage/screenshots

# Base de Datos (opcional)
# DATABASE_URL=postgresql://user:password@localhost:5432/screenshots

# AWS S3 (opcional - para almacenamiento en la nube)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_BUCKET=screenshots-bucket

# Cloudinary (opcional - alternativa a S3)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
